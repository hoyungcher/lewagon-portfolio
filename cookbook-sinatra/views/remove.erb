<h1>Recipe to remove:</h1>
<ol>
  <% @cookbook.all.each do |recipe| %>
    <li>
      <p><strong><%= recipe.name %></strong> (<%= recipe.prep_time %>)</p>
      <p>Difficulty: <%= recipe.difficulty %></p>
    </li>
  <% end %>
</ol>
<form method="POST" action="/new">
  <p>Please select recipe number: <input type="text" name="index"></p>
  <input type="submit">
</form>
